{
  "name": "ggbond",
  "version": "0.1.1",
  "private": true,
  "author": "Your Name",
  "description": "GGBond - AI-powered coding assistant",
  "scripts": {
    "dev": "next dev",
    "build": "next build --webpack",
    "start": "next start",
    "desktop:dev": "concurrently -k \"npm run dev\" \"wait-on http://localhost:3000 && electron electron/main.cjs\"",
    "desktop:start": "electron electron/main.cjs",
    "desktop:build": "npm run build && electron-builder --mac",
    "desktop:build:win": "npm run build && electron-builder --win",
    "desktop:build:linux": "npm run build && electron-builder --linux",
    "desktop:build:all": "npm run build && electron-builder --mac --win --linux",
    "desktop:build:dir": "npm run build && electron-builder --mac --dir",
    "lint": "eslint",
    "test": "vitest"
  },
  "build": {
    "appId": "com.ggbond",
    "productName": "GGBond",
    "directories": {
      "output": "dist"
    },
    "files": [
      "next.config.*",
      "next-env.d.ts",
      ".next/**/*",
      "!.next/dev/**",
      "electron/**/*",
      "package.json",
      "node_modules/**/*",
      "!node_modules/.cache"
    ],
    "extraMetadata": {
      "main": "electron/main.cjs"
    },
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "public/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "electron/entitlements.mac.plist",
      "entitlementsInherit": "electron/entitlements.mac.plist"
    },
    "linux": {
      "category": "Development",
      "icon": "public/icon.png",
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "icon": "public/icon.ico",
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "asar": true,
    "asarUnpack": [
      "node_modules/better-sqlite3/**/*",
      "node_modules/@google/**/*"
    ]
  },
  "dependencies": {
    "@google/gemini-cli-core": "^0.29.5",
    "@google/genai": "^1.40.0",
    "@xyflow/react": "^12.10.0",
    "better-sqlite3": "^12.6.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "framer-motion": "^12.33.0",
    "lucide-react": "^0.563.0",
    "next": "16.1.6",
    "next-themes": "^0.4.6",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-markdown": "^10.1.0",
    "react-resizable-panels": "^4.6.2",
    "react-syntax-highlighter": "^16.1.0",
    "rehype-raw": "^7.0.0",
    "remark-gfm": "^4.0.0",
    "tailwind-merge": "^3.4.0",
    "tailwindcss-animate": "^1.0.7",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@tailwindcss/typography": "^0.5.16",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/react": "^16.3.2",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^20.19.33",
    "@types/react": "^19.2.13",
    "@types/react-dom": "^19.2.3",
    "@types/react-syntax-highlighter": "^15.5.13",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^5.1.3",
    "babel-plugin-react-compiler": "1.0.0",
    "concurrently": "^9.2.1",
    "electron": "^37.2.0",
    "electron-builder": "^26.7.0",
    "eslint": "^9",
    "eslint-config-next": "16.1.6",
    "jsdom": "^28.0.0",
    "tailwindcss": "^4",
    "typescript": "^5",
    "vitest": "^4.0.18",
    "wait-on": "^9.0.3"
  }
}
