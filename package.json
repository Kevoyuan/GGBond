{
  "name": "ggbond",
  "version": "0.2.4",
  "private": true,
  "author": "Your Name",
  "description": "GGBond - AI-powered coding assistant",
  "scripts": {
    "dev": "next dev",
    "doctor:node-native": "node scripts/ensure-node-native.cjs",
    "rebuild:node-native": "npm rebuild better-sqlite3",
    "rebuild:electron-native": "electron-rebuild -f -w better-sqlite3,keytar,node-pty,tree-sitter-bash",
    "build": "npm run rebuild:node-native && next build",
    "start": "next start",
    "desktop:dev": "node scripts/run-desktop-dev.cjs",
    "desktop:dev:raw": "concurrently --kill-others-on-fail \"npm run dev\" \"electron electron/main.cjs\"",
    "desktop:start": "electron electron/main.cjs",
    "desktop:build": "npm run build && npm run rebuild:electron-native && electron-builder --mac",
    "desktop:build:mac:release": "npm run build && npm run rebuild:electron-native && electron-builder --mac --publish never",
    "desktop:build:win": "npm run build && npm run rebuild:electron-native && electron-builder --win",
    "desktop:build:linux": "npm run build && npm run rebuild:electron-native && electron-builder --linux",
    "desktop:build:all": "npm run build && npm run rebuild:electron-native && electron-builder --mac --win --linux",
    "desktop:build:dir": "npm run build && npm run rebuild:electron-native && electron-builder --mac --dir",
    "lint": "eslint",
    "test": "vitest"
  },
  "build": {
    "appId": "com.ggbond",
    "productName": "GGBond",
    "directories": {
      "output": "dist"
    },
    "npmRebuild": false,
    "files": [
      "!demo-video",
      "!demo-video/**",
      "next.config.*",
      "next-env.d.ts",
      ".next/**/*",
      "!.next/dev/**",
      "!.next/cache/**",
      "electron/**/*",
      "package.json",
      "node_modules/**/*",
      "!node_modules/.cache",
      "!node_modules/**/test/**",
      "!node_modules/**/tests/**",
      "!node_modules/**/__tests__/**",
      "!node_modules/**/docs/**",
      "!node_modules/**/doc/**",
      "!node_modules/**/examples/**",
      "!node_modules/**/.github/**",
      "!node_modules/**/*.map",
      "!node_modules/**/LICENSE",
      "!node_modules/**/LICENSE.md",
      "!node_modules/**/LICENSE.txt",
      "!node_modules/**/LICENSE*",
      "!node_modules/**/*.md",
      "node_modules/**/SKILL.md",
      "!node_modules/**/README*",
      "!node_modules/**/readme*",
      "!node_modules/**/CHANGELOG*",
      "!node_modules/**/CHANGELOG.md",
      "!node_modules/**/.DS_Store",
      "!node_modules/@next/swc-*/**/*"
    ],
    "extraMetadata": {
      "main": "electron/main.cjs"
    },
    "afterPack": "scripts/after-pack-prune.cjs",
    "afterSign": "scripts/notarize.cjs",
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "public/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "extendInfo": {
        "LSEnvironment": {
          "NODE_OPTIONS": ""
        }
      },
      "electronLanguages": [
        "en",
        "zh-CN"
      ],
      "entitlements": "electron/entitlements.mac.plist",
      "entitlementsInherit": "electron/entitlements.mac.plist"
    },
    "linux": {
      "category": "Development",
      "icon": "public/icon.png",
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "icon": "public/icon.ico",
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "asar": true,
    "asarUnpack": [
      "node_modules/better-sqlite3/**/*",
      "node_modules/@google/**/*",
      "node_modules/tree-sitter-bash/**/*",
      "node_modules/node-pty/**/*",
      "node_modules/@img/**/*",
      "node_modules/@lydell/node-pty*",
      "node_modules/keytar/**/*"
    ]
  },
  "dependencies": {
    "@google/gemini-cli-core": "^0.29.5",
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/addon-web-links": "^0.11.0",
    "@xyflow/react": "^12.10.0",
    "better-sqlite3": "^12.6.2",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "framer-motion": "^12.33.0",
    "lucide-react": "^0.563.0",
    "next": "15.1.0",
    "next-themes": "^0.4.6",
    "node-pty": "^1.1.0-beta6",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-markdown": "^10.1.0",
    "react-syntax-highlighter": "^16.1.0",
    "rehype-raw": "^7.0.0",
    "remark-gfm": "^4.0.0",
    "tailwind-merge": "^3.4.0",
    "uuid": "^13.0.0",
    "xterm": "^5.3.0"
  },
  "devDependencies": {
    "@electron/notarize": "^3.1.1",
    "@electron/rebuild": "^4.0.1",
    "@tailwindcss/postcss": "^4.2.0",
    "@tailwindcss/typography": "^0.5.16",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/react": "^16.3.2",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^20.19.33",
    "@types/react": "^19.2.13",
    "@types/react-dom": "^19.2.3",
    "@types/react-syntax-highlighter": "^15.5.13",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^5.1.3",
    "concurrently": "^9.2.1",
    "electron": "^37.2.0",
    "electron-builder": "^26.7.0",
    "eslint": "^9",
    "eslint-config-next": "16.1.6",
    "jsdom": "^28.0.0",
    "tailwindcss": "^4",
    "typescript": "^5",
    "vitest": "^4.0.18",
    "wait-on": "^9.0.3"
  }
}
