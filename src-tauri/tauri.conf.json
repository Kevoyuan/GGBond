{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "ggbond",
    "version": "0.3.0",
    "identifier": "com.ggbond.desktop",
    "build": {
        "frontendDist": "../out",
        "devUrl": "http://localhost:3000",
        "beforeDevCommand": "npm run dev",
        "beforeBuildCommand": "npm run build:tauri-dist"
    },
    "app": {
        "windows": [
            {
                "title": "GGBond",
                "width": 1200,
                "height": 800,
                "resizable": true,
                "fullscreen": false,
                "decorations": false,
                "transparent": true
            }
        ],
        "security": {
            "csp": null
        },
        "macOSPrivateApi": true
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "resources": [
            "resources/next-standalone",
            "resources/node-runtime"
        ],
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ],
        "macOS": {
            "signingIdentity": "-"
        }
    }
}